               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="oneStepButton" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#runOneStep" text="One step" />
      <Label fx:id="doneLabel" />
   </children>
